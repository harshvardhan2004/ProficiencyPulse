# Flask Configuration
# Change to 'production' for production environment
FLASK_ENV=development

# Host to bind to
FLASK_HOST=127.0.0.1

# Port to run on
FLASK_PORT=5000

# Application secret key
# SECRET_KEY=your-secure-secret-key-here
SECRET_KEY=devsecret123

# Database Configuration (for production)
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password
DB_HOST=localhost
DB_NAME=skills_matrix

# Production Settings (when FLASK_ENV=production)
# Number of threads for handling requests
WAITRESS_THREADS=4

# Maximum number of concurrent connections
WAITRESS_CONNECTION_LIMIT=1000

# Timeout for client connections in seconds
WAITRESS_CHANNEL_TIMEOUT=30

